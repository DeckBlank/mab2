{% extends '_html.twig' %}

{% block hero %}
  {% include 'templates-parts/hero.twig' %}
{% endblock %}

{% block content %}
  <section class="c-section c-section--login bg-pri-alt">
    <div class="grid-container padding-vertical-3">
      <div class="grid-x align-center">
        <div class="cell medium-10 large-8 padding-vertical-2">
          <section class="c-content position-relative bg-white br--medium">
            <figure class="text-center margin-bottom-2">
              <img class="of--contain" src="{{theme.link}}/static/images/vectors/login/hearts.png" alt="">
            </figure>
            <h1 class="fs-50 w-bold dark-gray text-center margin-bottom-1">{{title}}</h1>
            <div class="margin-bottom-2 f2 text-center">
              <p class="fs-21 w-medium margin-bottom-0 dark-gray">{{phrase.content}}</p>
              <p class="margin-bottom-0 gray-gray fs-18 w-medium">{{phrase.author}}</p>
            </div>
            <p class="error-message margin-bottom-1 alert text-center" :class="{ showed : isShowedErrorMessage }">${errorMessage}</p>
            <div class="c-form margin-bottom-1">
              <div class="margin-bottom-1">
                <label>
                  <p class="mb-05 gray-gray f2 w-medium">ID</p>
                  <input type="text" class="c-form__input input-reset" v-model="user" @keyup.enter="login">
                </label>
              </div>
              <div class="margin-bottom-2">
                <label>
                  <p class="mb-05 gray-gray f2 w-medium">CONTRASEÑA</p>
                  <input type="password" class="c-form__input input-reset" v-model="password" @keyup.enter="login">
                </label>
              </div>
              <button class="c-button c-button--secondary width-100 w-bold f2 padding-vertical-1" :disabled="isLoading" @click="login">
                INGRESAR 
              </button>
            </div>
            <p class="f2 text-center margin-bottom-3 fs-18 w-medium">¿No tienes un ID? <a href="{{site.url}}/solicitar-id" class="c-link c-link--sec margin-left-1 w-bold">Solicitar ID</a></p>
            <a href="{{site.url}}/solicitar-id" class="c-button c-button--ghost-gray margin-bottom-2 w-medium f2 display-block text-center">
              SOLICITAR UN ID
            </a>
            <ul class="flex-container align-center-middle ul-reset">
              {% for item in social_menu.items %}                
                <li class="c-social-media fs-35">
                  <a href="{{item.link}}" target="_blank">
                    <span class="c-icon"><i class="fab fa-{{item.slug}}"></i></span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </section>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
