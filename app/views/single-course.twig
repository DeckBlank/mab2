{% extends '_html.twig' %}

{% block hero %}
  {% include 'templates-parts/hero.twig' %}
{% endblock %}

{% block content %}
  <section class="c-section c-section--course">
    <div class="grid-container padding-top-3 margin-bottom-2">
      <section class="c-content" :class="{ active : isActiveCursosMenuDesk }">
        <h1 class="c-title fs-35 sec-dark margin-bottom-1">{{post.title}}</h1>
        <ul class="ul-reset">
          {% for unity in unities %}          
            <li class="c-unity margin-bottom-1" :class="{ active : isActiveUnity }">
              <h2 class="margin-bottom-1">
                <button class="c-unity__title flex-container align-justify width-100" @click="isActiveUnity = !isActiveUnity">
                  <p class="text-left margin-bottom-0 margin-right-1 w-bold fs-18 sec-gray">
                    Unidad {{loop.index}}: <span>{{unity.title}}</span>
                  </p>
                  <span class="c-icon display-block fs-21"><i class="far fa-chevron-down"></i></span>
                </button>
              </h2>
              <ul class="c-unity__topics ul-reset">
                {% for topic in unity.topics %}
                 
                  <li class="c-topic">
                    <a href="{{topic.link}}" class="c-topic__video flex-container align-justify align-middle">
                      <p class="margin-bottom-0 flex-container align-middle black">
                        <span class="c-icon margin-right-1 fs-21"><i class="far fa-play-circle"></i></span>
                        {{topic.title}}
                      </p>
                      <p class="gray-gray margin-bottom-0">
                        <span class="c-icon margin-right-1"><i class="far fa-clock"></i></span>
                        4:00
                      </p>
                    </a>
                    <a href="{{topic.summary}}" target="_blank" class="c-topic__video flex-container align-justify align-middle">
                      <p class="margin-bottom-0 flex-container align-middle black">
                        <span class="c-icon margin-right-1 fs-21"><i class="far fa-file-pdf"></i></span>
                        {{topic.title}}
                      </p>
                      <p class="gray-gray margin-bottom-0">
                        <span class="c-icon"><i class="far fa-download"></i></span>
                      </p>
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endfor %}
        </ul>
      </section>
    </div>
  </section>
{% endblock %}
