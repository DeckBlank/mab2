{% extends '_html.twig' %}

{% block hero %}
  {% include 'templates-parts/hero.twig' %}
{% endblock %}

{% block content %}
  <section class="c-section c-section--emotional">
    <section class="c-banner padding-vertical-3 margin-bottom-3">
      <div class="grid-container">
        <div class="flex-container align-right margin-bottom-2">
          <div class="flex-container align-middle">
            <div class="white f2 fs-18 flex-container align-middle">
              <span class="c-icon fs-21"><i class="far fa-gift"></i></span>
              <p class="margin-left-1 margin-bottom-0">Contenido gratuito</p>
            </div>
          </div>
        </div>      
      </div>
      <div class="grid-x align-center">
        <div class="cell large-8">          
          <div class="c-banner__content grid-container">
            <div class="c-banner-video bg-white position-relative display-block br--medium margin-bottom-3">
              <div style="padding:56.25% 0 0 0;position:relative;"><iframe src="https://player.vimeo.com/video/{{banner|split('/')[3]}}?color=de0d46&title=0&byline=0&autoplay=1" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe></div></div>
            </div>
            <div class="grid-x align-center">
              <div class="cell medium-8 large-6 padding-horizontal-1">
                <p class="white f2 text-center fs-21">
                  Accede a todo nuestro contenido online. Comienza a aprender donde quiera que est√©s con MAB.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>    
    </section>
    <div class="c-filter grid-container margin-bottom-1">
      <div class="grid-x grid-margin-x grid-margin-y align-center">
        {% for category in video_categories %}
          {% if loop.index == video_categories|length %}          
            <div class="cell medium-6 large-4">
              <li class="c-filter__option text-uppercase position-relative dark flex-container align-middle width-100">
                <input id="category-{{loop.index}}" value="exercises" type="radio" name="filter" class="hide" v-model="filter">
                <label for="category-{{loop.index}}" class="c-button fs-18 w-medium f2 width-100 height-100 text-center">
                  <div class="flex-container align-center-middle width-100  height-100">
                    {{category.name}}
                  </div>
                </label>
              </li>
            </div>          
          {% else %}
            <div class="cell medium-6 large-4">
              <li class="c-filter__option text-uppercase position-relative dark flex-container align-middle width-100">
                <input id="category-{{loop.index}}" value="{{category.slug}}" type="radio" name="filter" class="hide" v-model="filter">
                <label for="category-{{loop.index}}" class="c-button fs-18 w-medium f2 width-100 height-100 text-center">
                  <div class="flex-container align-center-middle width-100  height-100">
                    {{category.name}}
                  </div>
                </label>
              </li>
            </div>
          {% endif %}
        {% endfor %}              
      </div>
    </div>   
    <div class="grid-container padding-top-1">
      <div class="c-loader c-loader--full" :class="{ active : isFeedLoading }">
        <div class="container height-100 flex-container align-center-middle">
          <div class="loader">
            {% for item in [1,2,3,4,5] %}              
              <div class="loader--dot"></div>
            {% endfor %}       
          </div>
        </div>
      </div>
      <div class="c-feed grid-x grid-margin-x grid-margin-y margin-bottom-2">
        <div class="cell medium-6" v-for="(video, index) of videos" :key="video.id">
          <video-c
            :title="video.title"
            :link="video.link" 
            :author="video.author"
            :thumbnail="video.thumbnail"
          >
          </video-c>
        </div>
      </div>
      <div class="c-exercises grid-x grid-margin-x grid-margin-y margin-bottom-2">
        <div
          v-for="exercise of exercises" 
          :key="exercise.id"
          class="cell medium-4 large-3">
          <a             
            :href="exercise.file.url"
            target="_blank"
            class="c-exercise">
            <figure class="c-exercise__icon margin-bottom-1 text-center">
              <img class="height-100" src="{{theme.link}}/static/images/icons/pdf.png?key=20200419" alt="">
            </figure>
            <p class="margin-bottom-0 f2 w-medium fs-18 text-uppercase text-center dark">${exercise.title}</p>
          </a>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

