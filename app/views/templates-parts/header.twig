<header class="c-header width-100" :class="{ shadowed : isHeaderWithShadow }">
  <nav class="c-nav width-100">
    <div class="c-nav__left padding-horizontal-1 position-relative height-100 flex-container align-left align-middle margin-right-1">
      <figure class="c-brand c-brand--normal flex-container align-center-middle">
        <a class="c-brand__link" href="{{ site.url }}">
        </a>
      </figure>
      <ul class="c-menu flex-container ul-reset">
        {% for item in [primary_menu.items[0], primary_menu.items[1], primary_menu.items[2]] %}
          {% if item.slug == "cursos" %}              
            <li>
              <div class="c-menu__item" :class="{ active : isActiveCursosMenuDesk }">
                <a class="position-relative flex-container align-middle" @click="updateStatusCursosMenuDesk">
                  {{ item.name }}<span class="c-icon margin-left-1"><i class="far fa-chevron-down"></i></span>
                </a>
              </div>
            </li>

          {% else %}              
            <li>
              <div class="c-menu__item">
                <a href="{{ item.link }}" class="position-relative">{{ item.name }}</a>
              </div>
            </li>

          {% endif %}
        {% endfor %}
      </ul>        
    </div>
    <div class="c-nav__center flex-container align-center-middle bg-warning" :class="{ visible : isActiveBrowserToggle }">
      <ul class="c-menu flex-container align-middle ul-reset">
        <li>
          <div class="c-menu__item">
            <a href="{{ primary_menu.items[3].link }}" class="position-relative">{{ primary_menu.items[3].name }}</a>
          </div>
        </li>
      </ul>
      <browser></browser>
    </div>
    <div class="c-nav__right flex-container align-middle height-100">
      <button class="c-search-toggle black margin-right-1" @click="updateStatusBrowserToggle">
        <span><i class="far fa-search"></i></span>
      </button>
      <profile v-if="logedUser"></profile>
      <a 
        v-else 
        href="{{site.url}}/login" 
        class="c-login position-relative flex-container align-center-middle height-100 w-bold white">INGRESAR</a>
    </div>      
  </nav>
</header>
  
  