<header class="c-header c-header--session width-100" :class="{ shadowed : isHeaderWithShadow }">
  <div class="c-header__top padding-horizontal-1">
    <div class="flex-container height-100 align-middle align-justify">
      <div class="flex-container align-middle">
        <figure class="c-icon margin-right-1">
          <img class="of--contain width-100 height-100" src="{{theme.link}}/static/images/vectors/virtual-session/PC-min.png" alt="">
        </figure>
        <p class="margin-bottom-0 f2 fs-18 dark w-bold">SESIÓN VIRTUAL</p>
      </div>
      <a @click="endSession" class="c-logout f2 fs-18 w-medium">
        Finalizar sesión
      </a>
    </div>
  </div>
  <div class="c-header__bottom bg-light-gray">
    <div class="padding-horizontal-1 flex-container height-100 align-middle align-justify position-relative">
      <div class="f2 padding-vertical-1">
        CODIGO DE SESIÓN: <span class="sec-alt w-bold fs-18">${activedSession.key}</span>
      </div>
      <div class="c-media-controls position-absolute flex-container align-center-middle height-100">
        <button 
          class="c-media-controls__item rounded overflow-hidden"
          :class="{ disabled : !mediaControls.video }"
          @click="updateMediaStatus('video')">
          <div class="c-icons flex-container flex-dir-column">
            <div class="c-icon-container flex-container align-center-middle">
              <span class="c-icon"><i class="far fa-video"></i></span>
            </div>
            <div class="c-icon-container flex-container align-center-middle">
              <span class="c-icon"><i class="far fa-video-slash"></i></span>
            </div>
          </div>
        </button>
        <button 
          class="c-media-controls__item rounded overflow-hidden"
          :class="{ disabled : !mediaControls.audio }"
          @click="updateMediaStatus('audio')">
          <div class="c-icons flex-container flex-dir-column">
            <div class="c-icon-container flex-container align-center-middle">
              <span class="c-icon"><i class="far fa-microphone"></i></span>
            </div>
            <div class="c-icon-container flex-container align-center-middle">
              <span class="c-icon"><i class="far fa-microphone-slash"></i></span>
            </div>
          </div>
        </button>
        <button 
          class="c-media-controls__item c-media-controls__item--alone rounded flex-container align-center-middle overflow-hidden"
          @click="shareScreen">
          <span class="c-icon"><i class="far fa-desktop-alt"></i></span>
        </button>
      </div>
      <div class="flex-container padding-vertical-1 fs-18 f2 w-medium">
        <span class="c-icon margin-right-1"><i class="far fa-user"></i></span>
        ${users.length} Participantes
      </div>
    </div>
  </div>
</header>
