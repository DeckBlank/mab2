{% extends '_html.twig' %}

{% block hero %}
  {% include 'templates-parts/hero.twig' %}
{% endblock %}

{% block content %}
  <section class="c-section c-section--blog">
    <div class="c-blog bg-pri-color position-relative">
      <figure class="c-blog__float-figure f1 position-absolute">
        <img class="of--contain" src="{{ theme.link }}/static/images/blog/nube.png" alt="">
      </figure>
      <figure class="c-blog__float-figure f2 position-absolute">
        <img class="of--contain" src="{{ theme.link }}/static/images/blog/nube.png" alt="">
      </figure>
      <div class="grid-container">
        <h2 class="margin-bottom-3">
          <p class="white fs-70 margin-bottom-0 text-uppercase">blog</p>
        </h2>
        <div class="position-relative">
          <div class="grid-x grid-margin-x grid-margin-y position-relative  align-self-stretch">
            {% for article in articles %}
              <div class="cell medium-6 large-4">
                <div class="c-card-article bg-white mab-shadow-soft height-100">
                  <figure class="c-card-article__figure margin-bottom-1">
                    <img class="width-100 height-100 of--cover" src="{{ article.author }}" alt="">
                  </figure>
                  <div class="c-card-article__content aligned-text flex-container align-justify flex-dir-column">
                    <div>
                      <h3 class="c-card-article__title dark f2 w-xbold fs-25 lh-25 margin-0">
                        {{ article.title }}
                      </h3>
                      <p class="c-card-article__title dark f2 fs-16">{{ article.date }}</p>
                    </div>
                    <div class="text-center padding-top-1">
                      <a href="{{ article.link }}" class="pri-color c-link--ho-primary f2 w-xbold fs-16">Leer m√°s</a>
                    </div>
                  </div>
                </div>
              </div>
              {% endfor %}
          </div>
        </div>
      </div>
      <figure class="c-blog__float-figure f3">
        <img class="of--contain width-100" src="{{ theme.link }}/static/images/blog/arcoiris.png" alt="">
      </figure>
    </div>
  </section>
{% endblock %}
